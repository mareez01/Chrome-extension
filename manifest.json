{
    "manifest_version": 2,
    "name": "LinkedIn Info Extractor",
    "version": "1.0",
    "description": "Chrome extension to extract LinkedIn info and send to Google Sheets",
    "permissions": ["activeTab", "storage"],
    "browser_action": {
      "default_popup": "popup.html"
    },
 
    "content_scripts": [
      {
        "matches": ["*://www.linkedin.com/*"],
        "js": ["content.js"]
      }
    ],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    }
  }
  